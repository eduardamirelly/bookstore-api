// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Models

model Book {
  id               String           @id @default(uuid())
  title            String
  description      String
  author           String
  price            Float
  cover            String
  isFavorite       Boolean          @default(false)
  isInTreeding     Boolean          @default(false)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  book_of_category BookOfCategory[] @relation("book")

  @@map("books")
}

model Category {
  id               String           @id @default(uuid())
  name             String
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  book_of_category BookOfCategory[] @relation("category")

  @@map("categories")
}

model BookOfCategory {
  book       Book     @relation("book", fields: [bookId], references: [id])
  bookId     String
  category   Category @relation("category", fields: [categoryId], references: [id])
  categoryId String

  @@id([bookId, categoryId])
  @@map("books_of_categories")
}
